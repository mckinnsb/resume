- content_for( :head ) do 
  title
    | Stew Mckinney :: Game Dev Log
  = javascript_include_tag "https://assets.gfycat.com/gfycat.js"

- content_for( :header ) do

  h1.title
    small
      span
        | Game 
      br
      | Working Title: "Animal Wars"

  section
    h4.description.span7.offset5 
      | A physics-based strategy game which combines the best of turn-based strategy and ballistic action.

- data.game.posts.each do | post | 

  section.job_history
    header.row-fluid

      div.job_brief.span7
        h4.position 
          .bullet
          b
            | #{ post.title  } 

      div.row-fluid.preview
        div.gfyitem[ data-id=post.gfycat 
                     data-responseive="true"
                     data-controls="true"
                     data-autoplay="false" ]

      div.row-fluid.span7
        - post.description.each do | description |
          p = description
